<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="*"
    android:gravity="center_vertical"
    tools:context=".MainActivity" >

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txttitle"
            android:layout_width="324dp"
            android:layout_height="45dp"
            android:layout_span="2"
            android:background="#28CA2F"
            android:gravity="center"
            android:text="Chuyen doi nam duong lich"
            android:textColor="@color/white"
            android:textSize="24sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/txtsc"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="24sp"
            android:gravity="center"
            android:text="Nam duong lich:" />

        <EditText
            android:id="@+id/edtSC"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="24sp"
            android:ems="10"
            android:inputType="text"
            android:hint="2024" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/btnConv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="#9D9B9B"
            android:textSize="24sp"
            android:layout_column="1"
            android:text="Chuyen doi" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/txtlc"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textSize="24sp"
            android:text="Nam am lich:" />

        <EditText
            android:id="@+id/edtCL"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="24sp"
            android:ems="10"
            android:hint="Giap Thin"
            android:inputType="text" />
    </TableRow>

    <TableRow
        android:id="@+id/txtbelow"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_span="2"
            android:background="#28CA2F"
            android:text="" />
    </TableRow>
</TableLayout>